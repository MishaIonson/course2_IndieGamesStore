<!DOCTYPE html>
<!--  -->
<link href="stylesheets/main_style.css" rel="stylesheet"  type="text/css">
<link href="stylesheets/login.css" rel="stylesheet"  type="text/css">
<link href="stylesheets/account_page.css" rel="stylesheet"  type="text/css">
<link href='http://fonts.googleapis.com/css?family=Lekton' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Molengo' rel='stylesheet' type='text/css'>

<html>
<head>
  <title>IGS - ACCOUNT</title>
</head>
  <body>
    <div id='toolbar_div'>

      <div class="cf">
        <div id='navigationbar_div'>
          <a href='index'><p class='navigation_element'>NEWS</p></a>
          <a href='top'><p class='navigation_element'>TOP</p></a>
          <form id='search_form' action='/search' method="get">
            <input type='text' id='search_editview' name='search_line'>
            <input type='submit' id='search_submit_button' value=' '>
          </form>
          <!-- session stuff -->
          <%if (user == null){%>
            <a href='login'><p class='navigation_element'>LOGIN</p></a>
          <%}else{%>
            <a href='account_page'><p class='navigation_element'>PROFILE</p></a>
            <a href='logout'><p class='navigation_element'>LOGOUT</p></a>
          <%}%>
          <!-- -->
        </div>
      </div>

      <div id='toolbar_bottom_line'> </div>
    </div>

    <div id='content'>
      <form method="post" enctype="multipart/form-data">
        <img id='avatar' src="images/users/<%=account.avatarPath%>"></img><br>
        <input class='editview' type="file" name="picture" accept='image/png'><br>
        <input class='editview' name="name" type='text' placeholder="name" value='<%=account.name%>'><br>
        <p class='description'><%=account.email%><p>
        <p class='description'>Enter password to confirm changes</p>
        <input class='editview' name="password" type='password' placeholder="password"><br>
        <input class='button' type='submit' value='SAVE'>
      </form>
    </div>

    <footer>
      <div id='footer_line'> </div>
     <p id='footer_text'>Mykhailo Ivanov, 2016</p>
    </footer>
  </body>

</html>
